@model ShowPlanViewModel

@{
    ViewData["Title"] = "Your AI Plan";
}

<style>
    body {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }
    
    .glass-panel {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 40px;
        color: white;
    }

    .plan-content {
        white-space: pre-wrap;
        line-height: 1.6;
    }
    
    .img-fluid {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }
</style>

<div class="container mt-5">
    <div class="glass-panel">
        <div class="d-flex align-items-center mb-5 border-bottom border-secondary pb-3">
            <i class="fa-solid fa-file-medical-alt fs-2 me-3 text-info"></i>
            <h2 class="mb-0">Your Personalized Plan</h2>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <h4 class="text-info mb-3">Plan Details</h4>
                <div class="plan-content p-3 rounded" style="background: rgba(255,255,255,0.05);">
                    @if (Model != null)
                    {
                        @Model.PlanText
                    }
                    else
                    {
                        <span>No plan data available.</span>
                    }
                </div>
            </div>
            <div class="col-lg-4 mt-4 mt-lg-0">
                <h4 class="text-warning mb-3 text-center">Transformation Preview</h4>
                
                <!-- Before Image -->
                <div class="mb-4">
                    <p class="fw-bold text-center mb-2">Before (Current)</p>
                    @if (Model != null && !string.IsNullOrEmpty(Model.BeforeImageUrl))
                    {
                        <img src="@Model.BeforeImageUrl" class="img-fluid border border-secondary w-100" alt="Current Physique" />
                    }
                    else
                    {
                        <div class="p-4 text-center rounded border border-secondary" style="background: rgba(255,255,255,0.05);">
                            <span class="text-white-50">No Image Uploaded</span>
                        </div>
                    }
                </div>

                <!-- Arrow -->
                <div class="text-center mb-4">
                     <i class="fa-solid fa-arrow-down fs-2 text-info"></i>
                </div>

                <!-- After Image -->
                <div>
                    <p class="fw-bold text-center mb-2 text-success">After (@Model?.Duration Months)</p>
                     @if (Model != null && !string.IsNullOrEmpty(Model.AfterImageUrl))
                    {
                        <img src="@Model.AfterImageUrl" class="img-fluid border border-success w-100" style="box-shadow: 0 0 20px rgba(25,135,84,0.4);" alt="Projected Result" />
                    }
                    else
                    {
                        <div class="p-4 text-center rounded border border-secondary" style="background: rgba(255,255,255,0.05);">
                            <i class="fa-solid fa-image fs-1 mb-3 opacity-50"></i>
                            <p>Visualization generating...</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-5 text-center">
            <a asp-action="Index" class="btn btn-outline-light px-5 rounded-pill">Back to Dashboard</a>
        </div>
    </div>
</div>
