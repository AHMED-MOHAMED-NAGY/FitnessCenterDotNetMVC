@{
    ViewData["Title"] = "Şifre Yenileme";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>

    body
    {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    .reset-box 
    {
        width: 400px;
        padding: 35px;
        margin: 120px auto;
        background: rgba(255, 255, 255, 0.07);
        border-radius: 20px;
        backdrop-filter: blur(12px);
        box-shadow: 0 0 25px rgba(255,255,255,0.25);
        color: white;
    }

    h2 
    {
        text-align: center;
        margin-bottom: 25px;
        font-size: 2rem;
        font-weight: bold;
        color: #fff;
        text-shadow: 0 0 15px rgba(255,255,255,0.9);
    }

    .input-group 
    {
        position: relative;
        margin-bottom: 20px;
    }

    .input-group i
    {
        position: absolute;
        right: 15px;
        top: 14px;
        color: rgba(255,255,255,0.7);
        font-size: 1.1rem;
    }

    .form-control
    {
        width: 100%;
        padding: 12px 45px 12px 15px;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.4);
        border-radius: 12px;
        color: white;
        height: 45px;
    }

    .error-text 
    {
        color: #ff8080;
        font-size: 0.9rem;
        margin-top: -10px;
        margin-bottom: 10px;
        display: block;
    }

    .reset-btn
    {
        width: 100%;
        padding: 12px;
        background: white;
        color: black;
        font-weight: bold;
        border-radius: 20px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

    .reset-btn:hover 
    {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(255,255,255,0.8);
    }

    .message 
    {
        text-align: center;
        margin-top: 15px;
        color: #4da3ff;
        font-weight: bold;
    }

    footer, footer span, footer p, footer div {
        color: #ffffff !important;
        opacity: 1 !important;
        font-weight: 700 !important;
        text-shadow: 0 0 10px rgba(0,0,0,1) !important;
    }

    footer a 
    {
        color: #00a2ff !important;
        font-weight: 700 !important;
        text-shadow: 0 0 10px rgba(0,0,0,1) !important;
    }

</style>


<div class="reset-box">

    <h2>Yeni Şifre Belirle</h2>

    <form method="post" id="resetForm">

        <input type="hidden" name="token" value="@ViewBag.Token" />

        <div class="input-group">
            <input type="password" name="newPassword" class="form-control" placeholder="Yeni Şifre" required />
            <i class="fa-solid fa-lock"></i>
        </div>

        <div class="input-group">
            <input type="password" name="confirmPassword" class="form-control" placeholder="Şifre Tekrar" required />
            <i class="fa-solid fa-lock"></i>
        </div>

        <span id="match-error" class="error-text"></span>

        <button type="submit" class="reset-btn">Şifreyi Güncelle</button>

        @if (ViewBag.Message != null)
        {
            <p class="message">@ViewBag.Message</p>
        }

    </form>

</div>

<script>
    document.getElementById("resetForm").addEventListener("submit", function (e) {
        const pass = document.querySelector("input[name='newPassword']");
        const confirm = document.querySelector("input[name='confirmPassword']");
        const error = document.getElementById("match-error");

        if (pass.value !== confirm.value) {
            e.preventDefault();
            error.textContent = "Şifreler eşleşmiyor!";
        } else {
            error.textContent = "";
        }
    });
</script>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (ViewBag.Success == true)
    {
        <script>
            Swal.fire({
                title: 'Başarılı!',
                text: 'Şifre başarıyla güncellendi.',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then((result) => {
                window.location.href = '/Home/Login';
            });
        </script>
    }
}
