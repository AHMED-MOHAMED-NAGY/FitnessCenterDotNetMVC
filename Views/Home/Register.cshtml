@model Man

@{
    ViewData["Title"] = "Register";
}

<style>

    body 
    {
        background: url('/images/register.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .register-box 
    {
        width: 380px;
        margin-top: 40px;
        margin-left: 50px;
        padding: 35px;
        border-radius: 18px;
        background: rgba(0,0,0,0.40);
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.5);
        color: white;
    }

    h2 
    {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 25px;
        color: #ffffff;
    }

    .form-control 
    {
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 12px;
        height: 45px;
    }

    .form-control::placeholder
    {
        color: rgba(255,255,255,0.8);
    }

    .form-control:focus
    {
        background: rgba(255,255,255,0.10);
        border-color: #4da3ff;
        box-shadow: 0 0 10px rgba(77,163,255,0.7);
        color: white;
    }

    .register-btn 
    {
        width: 100%;
        margin-top: 10px;
        padding: 12px;
        background: #ffffff;
        color: #000000;
        font-size: 1.1rem;
        border: none;
        border-radius: 10px;
        font-weight: bold;
        transition: 0.25s ease-in-out;
        box-shadow: 0 0 10px rgba(255,255,255,0.35);
    }

    .register-btn:hover 
    {
        background: #ffffff;
        color: #000000;
        transform: scale(1.03);
        box-shadow: 0 0 14px rgba(255,255,255,0.7);
    }

    .login-link 
    {
        margin-top: 15px;
        text-align: center;
        font-size: 0.95rem;
        color: rgba(255,255,255,0.85);
    }

    .login-link a 
    {
        color: #4da3ff;
        font-weight: 700;
        text-decoration: none;
        transition: 0.2s ease;
    }

    .login-link a:hover 
    {
        text-shadow: 0 0 8px rgba(77,163,255,0.9);
        color: #80c3ff;
    }

    footer, footer span, footer p, footer div 
    {
        color: #ffffff !important;
        opacity: 1 !important;
        font-weight: 700 !important;
        text-shadow: 0 0 10px rgba(0,0,0,1) !important;
    }

    footer a 
    {
        color: #00a2ff !important;
        font-weight: 700 !important;
        text-shadow: 0 0 10px rgba(0,0,0,1) !important;
    }

</style>

<div class="register-box">

    <h2>Kayıt Ol</h2>
    <h2>Giriş Yap</h2>
    @if (TempData["err"] != null)
    {
        <div class="text-danger">
            @TempData["err"]
        </div>
    }
    <form asp-action="RegisterResult" asp-controller="Home">
        <input asp-for= "name" type="text" class="form-control mb-3" placeholder="Adınız" />
        <span asp-validation-for="name" class="text-danger"></span>
        <input asp-for="userName" type="text" class="form-control mb-3" placeholder="UserName" />
        <span asp-validation-for="userName" class="text-danger"></span>
        <input asp-for ="number" type="tel" class="form-control mb-3" placeholder="Telefon Numarısı" />
        <span asp-validation-for="number" class="text-danger"></span>
        <input asp-for="email" type="email" class="form-control mb-3" placeholder="Email Adresi" />
        <span asp-validation-for="email" class="text-danger"></span>
        <input asp-for="age" type="number" class="form-control mb-3" placeholder="Your Age" />
        <span asp-validation-for="age" class="text-danger"></span>
        <input asp-for="password" type="password" class="form-control mb-3" placeholder="Şifre" />
        <span asp-validation-for="password" class="text-danger"></span>
        <input asp-for="compare_password" type="password" class="form-control mb-3" placeholder="Şifre Tekrar" />
        <span asp-validation-for="compare_password" class="text-danger"></span>

        <button type="submit" class="register-btn">Kayıt Ol</button>

        <div class="login-link">
            Zaten hesabın var mı?
            <a href="/Home/Login">Giriş Yap</a>
        </div>

    </form>

</div>
