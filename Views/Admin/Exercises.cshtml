@model IEnumerable<Exercise>

@{
    ViewData["Title"] = "Manage Exercises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: url('/images/indexBackground.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .glass-table {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        margin-top: 2rem;
        box-shadow: 0 0 20px rgba(255, 107, 107, 0.2);
    }

    .glass-header {
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table { color: white; margin-bottom: 0; --bs-table-bg: transparent; --bs-table-color: white; }
    .table thead th { border-bottom: 1px solid rgba(255, 255, 255, 0.2); background: rgba(0, 0, 0, 0.4); color: #ffc107; }
    .table tbody td { border-bottom: 1px solid rgba(255, 255, 255, 0.1); vertical-align: middle; }
    .table tbody tr:hover { background-color: rgba(255,255,255,0.1) !important; color: white; }

    .glass-btn-danger {
        background: rgba(220, 53, 69, 0.2);
        color: #ff6b6b;
        border: 1px solid rgba(220, 53, 69, 0.4);
        padding: 0.4rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .glass-btn-danger:hover {
        background: rgba(220, 53, 69, 0.4);
        box-shadow: 0 0 15px rgba(220, 53, 69, 0.4);
        color: white;
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        width: 300px;
    }
    
    .glass-input:focus {
        background: rgba(255, 255, 255, 0.2);
        outline: none;
        border-color: #ff6b6b;
    }

    .glass-btn-add {
        background: rgba(40, 167, 69, 0.2);
        color: #51cf66;
        border: 1px solid rgba(40, 167, 69, 0.4);
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .glass-btn-add:hover {
        background: rgba(40, 167, 69, 0.4);
        color: white;
        box-shadow: 0 0 15px rgba(40, 167, 69, 0.4);
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-white mb-0">Manage Exercises</h1>
            <p class="text-white-50">Add and remove exercises available for users.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="fa-solid fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success bg-transparent text-white border-white">
            <i class="fa-solid fa-check-circle me-2"></i>@TempData["msg"]
        </div>
    }
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger bg-transparent text-white border-white">
            <i class="fa-solid fa-exclamation-circle me-2"></i>@TempData["err"]
        </div>
    }

    <!-- Add Exercise Form -->
    <div class="glass-table mb-4 p-4">
        <form asp-action="AddExercise" method="post" class="d-flex gap-3 align-items-center">
            <label class="fw-bold text-white">New Exercise:</label>
            <input type="text" name="name" class="glass-input" placeholder="e.g. Yoga, Cardio..." required />
            <button type="submit" class="glass-btn-add">
                <i class="fa-solid fa-plus me-2"></i>Add
            </button>
        </form>
    </div>

    <!-- Exercises List -->
    <div class="glass-table">
        <div class="glass-header">
            <h5 class="mb-0 text-white"><i class="fa-solid fa-dumbbell me-2"></i>Current Exercises</h5>
            <span class="badge bg-danger rounded-pill">Total: @Model.Count()</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 10%;">#</th>
                        <th>Exercise Name</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="background: rgba(0,0,0,0.2);">
                            <td>@item.exId</td>
                            <td>@item.exerciseType</td>
                            <td class="text-end">
                                <a asp-action="DeleteExercise" asp-route-id="@item.exId" class="glass-btn-danger" onclick="return confirm('Are you sure you want to delete this exercise?')">
                                    <i class="fa-solid fa-trash me-1"></i>Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
