@{
    ViewData["Title"] = "AI Plan Selection";
}

<style>
    body {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }
    
    .glass-panel {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 40px;
        color: white;
        text-align: center;
    }

    .plan-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 15px 30px;
        border-radius: 10px;
        font-size: 1.2rem;
        transition: all 0.3s;
        display: block;
        width: 100%;
        margin-bottom: 15px;
        text-decoration: none;
    }

    .plan-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.02);
        color: #4da3ff;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-panel">
                <i class="fa-solid fa-robot fs-1 mb-4 text-info icon-glow"></i>
                <h2 class="mb-4">Choose Your AI Plan</h2>
                <p class="mb-5 text-muted" style="color: rgba(255,255,255,0.7)!important">Select a goal to generate your personalized fitness plan.</p>

                <form asp-action="GeneratePlan" method="post" enctype="multipart/form-data" class="text-start">
                     
                     <div class="mb-4">
                        <label class="form-label fw-bold">1. Select Your Goal</label>
                        <div class="d-flex gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="planType" id="bulking" value="Bulking" required>
                                <label class="form-check-label" for="bulking">Bulking (Muscle Gain)</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="planType" id="cutting" value="Cutting" required>
                                <label class="form-check-label" for="cutting">Cutting (Fat Loss)</label>
                            </div>
                        </div>
                     </div>

                     <div class="mb-4">
                         <label class="form-label fw-bold">2. Plan Duration (Months)</label>
                         <select name="duration" class="form-select" style="background: rgba(255,255,255,0.1); color: white; border: 1px solid rgba(255,255,255,0.2);">
                             <option value="1" class="text-dark">1 Month</option>
                             <option value="3" class="text-dark">3 Months</option>
                             <option value="6" class="text-dark">6 Months</option>
                         </select>
                     </div>
                     
                     <div class="mb-4">
                         <label class="form-label fw-bold">3. Current Physique Photo</label>
                         <input type="file" name="image" class="form-control" required style="background: rgba(255,255,255,0.1); color: white; border: 1px solid rgba(255,255,255,0.2);">
                         <div class="form-text text-white-50">Required for AI analysis and 'After' generation.</div>
                     </div>

                     <button type="submit" class="btn btn-primary w-100 py-3 fw-bold rounded-pill text-uppercase" style="letter-spacing: 1px; box-shadow: 0 0 15px rgba(13,110,253,0.5);">
                        <i class="fa-solid fa-wand-magic-sparkles me-2"></i> Generate AI Plan
                     </button>
                </form>
                
                <div class="mt-4">
                     <a asp-action="Index" class="text-white text-decoration-none opacity-75 hover-opacity-100">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
