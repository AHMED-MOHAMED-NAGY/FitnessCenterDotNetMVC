@{
    ViewData["Title"] = "Home Page";
}

<style>

    body 
    {
        background: url('/images/indexBackground.jpg') no-repeat center center fixed;
        background-size: cover;
        background-position: center;
    }

    .navbar 
    {
        background-color: rgba(0, 0, 0, 0.35) !important;
        backdrop-filter: blur(6px);
    }

    .navbar a, .navbar-brand 
    {
        color: #ffffff !important;
        font-weight: 600;
    }

    .navbar a:hover 
    {
        color: #00a2ff !important;
    }

    h1 
    {
        color: #ffffff;
        font-weight: 700;
        text-shadow: 0 0 10px #000;
    }

    footer, footer span, footer p, footer div 
    {
        color: #ffffff !important;
        opacity: 1 !important;
        font-weight: 700 !important;
        text-shadow: 0 0 10px rgba(0,0,0,1) !important;
    }

    footer a 
    {
        color: #00a2ff !important;
        font-weight: 700 !important;
        text-shadow: 0 0 10px rgba(0,0,0,1) !important;
    }

</style>

<div class="text-center">

    <h1 class="display-4">Welcome in our Fintness Center</h1>

    <a href="/Home/Login">
        <div class="card">
            <h3>LOGIN</h3>
        </div>
    </a>

    <a href="/Home/Register">
        <div class="card">
            <h3>REGISTER</h3>
        </div>
    </a>

    <a href="/Home/Info">
        <div class="card">
            <h3>INFO</h3>
        </div>
    </a>

</div>
