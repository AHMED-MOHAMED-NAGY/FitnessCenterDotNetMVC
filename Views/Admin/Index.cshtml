@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Admin Dashboard";
    string adminName = HttpContextAccessor.HttpContext.Session.GetString("UserName") ?? "Admin";
}

<style>
    body {
        background: url('/images/indexBackground.jpg') no-repeat center center fixed;
        background-size: cover;
        background-position: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }

    /* Glass Effect */
    .glass-panel {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 30px;
        position: relative;
    }

    .glass-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 20px;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 15px;
        width: 100%;
        text-align: left;
        margin-bottom: 20px;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        align-items: center;
        text-decoration: none;
    }

    .glass-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateX(10px);
        color: white;
        border-color: #4da3ff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }
    
    .glass-btn i {
        min-width: 40px;
        font-size: 1.5rem;
    }

    .applications-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 25px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        transition: all 0.4s ease;
        text-decoration: none;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .applications-card:hover {
        transform: scale(1.02);
        border-color: #ffc107;
        box-shadow: 0 0 30px rgba(255, 193, 7, 0.3);
        color: white;
    }
    
    .applications-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: 0.5s;
    }
    
    .applications-card:hover::before {
        left: 100%;
    }

    .notifications-badge {
         position: relative;
        text-decoration: none;
        color: white;
        font-size: 1.5rem;
        transition: color 0.3s;
    }
    .notifications-badge:hover { color: #ffc107; }
    
    .logout-btn {
        border: 1px solid rgba(220, 53, 69, 0.5);
        color: #dc3545;
        padding: 5px 15px;
        border-radius: 20px;
        text-decoration: none;
        transition: 0.3s;
    }
    .logout-btn:hover { background: #dc3545; color: white; }
</style>

<div class="container py-5">
    
    <!-- Admin Header -->
    <div class="glass-panel mb-5 d-flex justify-content-between align-items-center">
        <a asp-action="Edit" class="d-flex align-items-center text-decoration-none text-white" style="transition: transform 0.2s;" onmouseover="this.style.transform='translateX(5px)'" onmouseout="this.style.transform='translateX(0)'">
            <div class="rounded-circle bg-white text-dark d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; font-size: 1.8rem;">
                <i class="fa-solid fa-user-shield"></i>
            </div>
            <div>
                <h2 class="mb-0 fw-bold">Admin Panel</h2>
                <small class="text-white-50">Welcome, @adminName <i class="fa-solid fa-pen-to-square ms-2"></i></small>
            </div>
        </a>
        
         <div class="d-flex align-items-center gap-4">
             <!-- Notifications -->
            <a asp-controller="Home" asp-action="Notifications" class="notifications-badge" title="Notifications">
                <i class="fa-solid fa-bell"></i>
                @await Component.InvokeAsync("NotificationBadge")
            </a>
        </div>
    </div>

    <div class="row g-4 h-100">
        <!-- Sidebar Menu (Left) -->
        <div class="col-md-5 col-lg-4">
            <div class="d-flex flex-column h-100">
                <a asp-action="ListAdmins" class="glass-btn">
                    <i class="fa-solid fa-users-gear text-info"></i> List Admins
                </a>
                
                <a asp-action="ListCotches" class="glass-btn">
                    <i class="fa-solid fa-clipboard-user text-success"></i> List Coaches
                </a>
                
                <a asp-action="ListUsers" class="glass-btn">
                    <i class="fa-solid fa-users text-primary"></i> List Users
                </a>
                
                <a asp-action="Exercises" class="glass-btn">
                    <i class="fa-solid fa-dumbbell text-warning"></i> Exercises
                </a>
                
                <a asp-action="Appointments" class="glass-btn">
                    <i class="fa-solid fa-calendar-check text-danger"></i> Requests
                </a>
            </div>
        </div>

        <!-- Main Action (Right) - Applications -->
        <div class="col-md-7 col-lg-8" style="min-height: 400px;">
            <a asp-action="Applications" class="applications-card p-5">
                <i class="fa-solid fa-file-circle-check" style="font-size: 6rem; margin-bottom: 30px; color: #ffc107;"></i>
                <h1 class="display-4 fw-bold">APPLICATIONS</h1>
                <p class="fs-4 text-white-50 mt-2">Manage New Join Requests</p>
                <div class="mt-4">
                     <span class="btn btn-outline-light rounded-pill px-4">Review Pending</span>
                </div>
            </a>
        </div>
    </div>
</div>