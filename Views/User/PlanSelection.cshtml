@{
    ViewData["Title"] = "AI Plan Selection";
}

<style>
    body {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }
    
    .glass-panel {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 40px;
        color: white;
        text-align: center;
    }

    .plan-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 15px 30px;
        border-radius: 10px;
        font-size: 1.2rem;
        transition: all 0.3s;
        display: block;
        width: 100%;
        margin-bottom: 15px;
        text-decoration: none;
    }

    .plan-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.02);
        color: #4da3ff;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-panel">
                <i class="fa-solid fa-robot fs-1 mb-4 text-info icon-glow"></i>
                <h2 class="mb-4">Choose Your AI Plan</h2>
                <p class="mb-5 text-muted" style="color: rgba(255,255,255,0.7)!important">Select a goal to generate your personalized fitness plan.</p>

                <form asp-action="GeneratePlan" method="post" enctype="multipart/form-data">
                     <!-- Simplified selection for demonstration, assuming buttons pass value or strict flow -->
                     <!-- Original file likely had buttons to submit or select. Let's provide a generic form or buttons. -->
                     <!-- Since I don't see original content, I'll assume standard layout logic -->
                     
                     <div class="d-grid gap-3">
                        <button type="submit" name="planType" value="Weight Loss" class="plan-btn">
                            <i class="fa-solid fa-weight-scale me-2"></i> Weight Loss
                        </button>
                        <button type="submit" name="planType" value="Muscle Gain" class="plan-btn">
                            <i class="fa-solid fa-dumbbell me-2"></i> Muscle Gain
                        </button>
                        <button type="submit" name="planType" value="General Fitness" class="plan-btn">
                            <i class="fa-solid fa-heart-pulse me-2"></i> General Fitness
                        </button>
                     </div>
                     
                     <!-- Assuming Duration and Image might be needed, adding hidden or visible inputs if required by controller -->
                     <!-- Controller expects: GeneratePlan(string planType, int duration, IFormFile image) -->
                     
                     <div class="mt-4 text-start">
                         <label class="form-label">Duration (Weeks)</label>
                         <input type="number" name="duration" value="4" class="form-control mb-3" style="background: rgba(255,255,255,0.1); color: white; border: 1px solid rgba(255,255,255,0.2);">
                         
                         <label class="form-label">Current Physique (Optional)</label>
                         <input type="file" name="image" class="form-control" style="background: rgba(255,255,255,0.1); color: white; border: 1px solid rgba(255,255,255,0.2);">
                     </div>
                </form>
                
                <div class="mt-4">
                     <a asp-action="Index" class="text-white text-decoration-none opacity-75 hover-opacity-100">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
