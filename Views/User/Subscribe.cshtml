@model User
@{
    ViewData["Title"] = "Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HideNavItems"] = true;
}

<style>
    body {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center text-white">
            <h2 class="mb-4 display-4 fw-bold">Choose Your Plan</h2>
            <p class="lead mb-5 text-white-50">Unlock full access to specialized coaches, personalized plans, and more.</p>
            
            <form asp-action="Subscribe" method="post">
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4">
                    
                    <!-- 1 Month Plan -->
                    <div class="col">
                        <div class="card h-100 border-0 shadow-lg glass-card-dark">
                            <div class="card-header bg-transparent border-bottom border-secondary py-3">
                                <h4 class="my-0 fw-normal text-primary">1 Month</h4>
                            </div>
                            <div class="card-body d-flex flex-column text-center">
                                <h1 class="card-title pricing-card-title text-white">$35<small class="text-white-50 fw-light">/mo</small></h1>
                                <ul class="list-unstyled mt-3 mb-4 flex-grow-1 text-start ps-3 text-white-50">
                                    <li><i class="fa-solid fa-check text-primary me-2"></i>Full Access</li>
                                    <li><i class="fa-solid fa-check text-primary me-2"></i>Weekly Tracking</li>
                                    <li><i class="fa-solid fa-check text-primary me-2"></i>Basic Support</li>
                                </ul>
                                <div class="form-check text-center mt-auto">
                                    <input class="form-check-input float-none bg-dark border-secondary" type="radio" name="planType" id="plan1" value="1 Month" required>
                                    <label class="form-check-label stretched-link text-white" for="plan1">Select</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 3 Months Plan -->
                    <div class="col">
                        <div class="card h-100 border-0 shadow-lg glass-card-dark popular-plan">
                            <div class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-success">
                                Most Popular
                            </div>
                            <div class="card-header bg-transparent border-bottom border-secondary py-3">
                                <h4 class="my-0 fw-normal text-success">3 Months</h4>
                            </div>
                            <div class="card-body d-flex flex-column text-center">
                                <h1 class="card-title pricing-card-title text-white">$90<small class="text-white-50 fw-light">/3mo</small></h1>
                                <div class="text-success fw-bold mb-2 small">Save $15</div>
                                <ul class="list-unstyled mt-3 mb-4 flex-grow-1 text-start ps-3 text-white-50">
                                    <li><i class="fa-solid fa-check text-success me-2"></i>Everything in 1 Mo</li>
                                    <li><i class="fa-solid fa-check text-success me-2"></i>Priority Support</li>
                                    <li><i class="fa-solid fa-check text-success me-2"></i>AI Fitness Plan</li>
                                </ul>
                                <div class="form-check text-center mt-auto">
                                    <input class="form-check-input float-none bg-dark border-secondary" type="radio" name="planType" id="plan3" value="3 Months" required checked>
                                    <label class="form-check-label stretched-link text-white" for="plan3">Select</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 6 Months Plan -->
                    <div class="col">
                        <div class="card h-100 border-0 shadow-lg glass-card-dark">
                            <div class="card-header bg-transparent border-bottom border-secondary py-3">
                                <h4 class="my-0 fw-normal text-info">6 Months</h4>
                            </div>
                            <div class="card-body d-flex flex-column text-center">
                                <h1 class="card-title pricing-card-title text-white">$160<small class="text-white-50 fw-light">/6mo</small></h1>
                                <div class="text-info fw-bold mb-2 small">Save $50</div>
                                <ul class="list-unstyled mt-3 mb-4 flex-grow-1 text-start ps-3 text-white-50">
                                    <li><i class="fa-solid fa-check text-info me-2"></i>All Features</li>
                                    <li><i class="fa-solid fa-check text-info me-2"></i>Diet Consultation</li>
                                    <li><i class="fa-solid fa-check text-info me-2"></i>Advanced Analytics</li>
                                </ul>
                                <div class="form-check text-center mt-auto">
                                    <input class="form-check-input float-none bg-dark border-secondary" type="radio" name="planType" id="plan6" value="6 Months" required>
                                    <label class="form-check-label stretched-link text-white" for="plan6">Select</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 12 Months Plan -->
                    <div class="col">
                        <div class="card h-100 border-0 shadow-lg glass-card-dark">
                            <div class="card-header bg-transparent border-bottom border-secondary py-3">
                                <h4 class="my-0 fw-normal text-warning">12 Months</h4>
                            </div>
                            <div class="card-body d-flex flex-column text-center">
                                <h1 class="card-title pricing-card-title text-white">$300<small class="text-white-50 fw-light">/yr</small></h1>
                                <div class="text-warning fw-bold mb-2 small">Best Value - Save $120</div>
                                <ul class="list-unstyled mt-3 mb-4 flex-grow-1 text-start ps-3 text-white-50">
                                    <li><i class="fa-solid fa-crown text-warning me-2"></i>VIP Status</li>
                                    <li><i class="fa-solid fa-check text-warning me-2"></i>Personal Coach</li>
                                    <li><i class="fa-solid fa-check text-warning me-2"></i>Full Health Audit</li>
                                </ul>
                                <div class="form-check text-center mt-auto">
                                    <input class="form-check-input float-none bg-dark border-secondary" type="radio" name="planType" id="plan12" value="12 Months" required>
                                    <label class="form-check-label stretched-link text-white" for="plan12">Select</label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="alert alert-dark mt-5 text-center border-secondary text-white-50" style="background: rgba(0,0,0,0.6);">
                    <i class="bi bi-info-circle text-info"></i> After clicking "Subscribe", your request will be sent to the current Admin for approval.
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-outline-light px-5 mt-3 fw-bold shadow-lg rounded-pill glow-on-hover">
                        Proceed to Subscribe
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .glass-card-dark {
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .glass-card-dark:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.5) !important;
        border-color: rgba(255, 255, 255, 0.3);
    }
    .popular-plan {
        border-color: rgba(25, 135, 84, 0.5); /* Success color hint */
        box-shadow: 0 0 15px rgba(25, 135, 84, 0.2) !important;
    }
    
    .glow-on-hover:hover {
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
    }
</style>
