@model dynamic

@{
    ViewData["Title"] = "Make Appointment";
}

<style>
    body {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
    }
    
    .glass-panel {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 40px;
        color: white;
    }

    .form-control, .form-select {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(255, 255, 255, 0.2);
        border-color: #4da3ff;
        color: white;
        box-shadow: 0 0 10px rgba(77,163,255,0.5);
    }
    
    .text-muted {
        color: rgba(255, 255, 255, 0.6) !important;
    }

    /* Fix for dropdown options visibility */
    .form-select option {
        background-color: #333;
        color: white;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-panel">
                <div class="d-flex align-items-center mb-4 border-bottom border-secondary pb-3">
                    <i class="fa-solid fa-calendar-plus fs-2 me-3 text-info"></i>
                    <h2 class="mb-0">Make Appointment</h2>
                </div>

                <form asp-action="BookAppointment" method="post">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Select Exercise</label>
                        <select name="exerciseId" id="exerciseSelect" class="form-select" required>
                            <option value="" data-price="0">-- Choose Exercise --</option>
                            @if (ViewBag.Exercises != null)
                            {
                                foreach (var item in ViewBag.Exercises)
                                {
                                    <option value="@item.exId" data-price="@item.Price">@item.exerciseType</option>
                                }
                            }
                        </select>
                        <div id="priceDisplay" class="mt-2 text-warning fw-bold" style="display:none;">
                            <i class="fa-solid fa-tag me-1"></i> Price: $<span id="priceValue">0.00</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Select Coach</label>
                        <select name="coachId" id="coachSelect" class="form-select" required disabled>
                            <option value="">-- Select Exercise First --</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Select Available Time</label>
                        <select name="appointmentDate" id="timeSelect" class="form-select" required disabled>
                            <option value="">-- Select Coach First --</option>
                        </select>
                        <small class="text-white-50">Times are based on coach's availability.</small>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-5">
                        <a asp-action="Index" class="btn btn-outline-light px-4">Cancel</a>
                        <button type="submit" class="btn btn-info px-5 fw-bold">Book Now</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Elements
    const exerciseSelect = document.getElementById('exerciseSelect');
    const coachSelect = document.getElementById('coachSelect');
    const timeSelect = document.getElementById('timeSelect');
    const priceDisplay = document.getElementById('priceDisplay');
    const priceValue = document.getElementById('priceValue');

    // Filter Coaches by Exercise
    exerciseSelect.addEventListener('change', function() {
        const exerciseId = this.value;
        const selectedOption = this.options[this.selectedIndex];
        const price = selectedOption.getAttribute('data-price');
        
        // Update Price Display
        if (price && parseFloat(price) > 0) {
            priceValue.textContent = price;
            priceDisplay.style.display = 'block';
        } else {
            priceDisplay.style.display = 'none';
        }
        
        // Reset Coach and Time
        coachSelect.innerHTML = '<option value="">Loading...</option>';
        coachSelect.disabled = true;
        
        timeSelect.innerHTML = '<option value="">-- Select Coach First --</option>';
        timeSelect.disabled = true;

        if (exerciseId) {
            fetch('/User/GetCoachesByExercise?exerciseId=' + exerciseId)
                .then(response => response.json())
                .then(data => {
                    coachSelect.innerHTML = '<option value="">-- Choose Coach --</option>';
                    if (data && data.length > 0) {
                        data.forEach(coach => {
                            const option = document.createElement('option');
                            option.value = coach.value;
                            option.text = coach.text;
                            coachSelect.appendChild(option);
                        });
                        coachSelect.disabled = false;
                    } else {
                        coachSelect.innerHTML = '<option value="">No coaches available for this exercise</option>';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    coachSelect.innerHTML = '<option value="">Error loading coaches</option>';
                });
        } else {
            coachSelect.innerHTML = '<option value="">-- Choose Exercise First --</option>';
        }
    });

    // Get Available Times for selected Coach
    coachSelect.addEventListener('change', function() {
        const coachId = this.value;
        
        // Reset time select
        timeSelect.innerHTML = '<option value="">Loading...</option>';
        timeSelect.disabled = true;

        if (coachId) {
            fetch('/User/GetCoachTimes?id=' + coachId)
                .then(response => response.json())
                .then(data => {
                    timeSelect.innerHTML = '<option value="">-- Choose Time --</option>';
                    if (data && data.length > 0) {
                        data.forEach(time => {
                            const option = document.createElement('option');
                            option.value = time;
                            option.text = time;
                            timeSelect.appendChild(option);
                        });
                        timeSelect.disabled = false;
                    } else {
                        timeSelect.innerHTML = '<option value="">No available times</option>';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    timeSelect.innerHTML = '<option value="">Error loading times</option>';
                });
        } else {
            timeSelect.innerHTML = '<option value="">-- Select Coach First --</option>';
        }
    });
</script>
