@{
    ViewData["Title"] = "Customize Your Plan";
    string planType = ViewBag.CurrentPlanType as string ?? "General";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <h2 class="fw-bold mb-0">@planType Plan Setup</h2>
                    <p class="mb-0 mt-2 opacity-75">Let's personalize your journey.</p>
                </div>
                <div class="card-body p-5 bg-white">
                    <form asp-action="GeneratePlan" asp-controller="User" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="planType" value="@planType" />

                        <!-- Plan Type Selection (Added as per user request) -->
                        <div class="mb-4">
                            <label for="planType" class="form-label fw-bold">Plan Goal</label>
                            <select class="form-select form-select-lg" name="planType" id="planType" required>
                                <option value="General" selected="@(planType == "General")">General Fitness</option>
                                <option value="Cutting" selected="@(planType == "Cutting")">Cutting (Fat Loss)</option>
                                <option value="Bulking" selected="@(planType == "Bulking")">Bulking (Muscle Gain)</option>
                            </select>
                        </div>

                        <!-- Duration Selection -->
                        <div class="mb-4">
                            <label for="duration" class="form-label fw-bold">Select Duration</label>
                            <select class="form-select form-select-lg" name="duration" id="duration" required>
                                <option value="3">3 Months</option>
                                <option value="6">6 Months</option>
                                <option value="12">12 Months</option>
                            </select>
                            <div class="form-text">Choose how long you want to commit to this plan.</div>
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-5">
                            <label for="image" class="form-label fw-bold">Upload Current Photo</label>
                            <div class="input-group input-group-lg">
                                <input type="file" class="form-control" name="image" id="image" accept="image/*" required>
                            </div>
                            <div class="form-text">Upload a full-body photo for the best AI transformation results.</div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold">
                                <i class="bi bi-stars me-2"></i>Generate My Transformation
                            </button>
                            <a asp-action="Index" class="btn btn-light btn-lg rounded-pill text-muted">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
