@model Man

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>

    body 
    {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn 
    {
        from 
        {
            opacity: 0;
            transform: translateY(15px);
        }

        to 
        {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp 
    {
        from 
        {
            opacity: 0;
            transform: translateY(30px);
        }

        to 
        {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-box 
    {
        width: 400px;
        padding: 40px;
        margin: 100px auto;
        background: rgba(0, 0, 0, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        backdrop-filter: blur(12px);
        box-shadow: 0 0 25px rgba(0,0,0,0.5);
        animation: slideUp 0.9s ease-out;
        color: white;
    }

    h2 
    {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: bold;
        color: #fff;
        text-shadow: 0 0 15px rgba(255,255,255,0.9);
    }

    .input-group 
    {
        position: relative;
        margin-bottom: 20px;
    }

    .input-group i 
    {
        position: absolute;
        right: 15px;
        top: 14px;
        color: rgba(255,255,255,0.7);
        font-size: 1.1rem;
    }

    .form-control 
    {
        width: 100%;
        padding: 12px 45px 12px 15px;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.4);
        border-radius: 12px;
        color: white;
        height: 45px;
        transition: 0.3s ease-in-out;
    }

    .form-control::placeholder
    {
        color: rgba(255,255,255,0.7);
    }

    .form-control:focus 
    {
        background: rgba(255,255,255,0.15);
        border-color: #4da3ff;
        box-shadow: 0 0 15px rgba(77,163,255,0.9);
    }

    .options 
    {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        color: #fff;
        font-size: 0.9rem;
    }

    .options a 
    {
        color: #4da3ff;
        text-decoration: none;
    }

    .options a:hover 
    {
        text-decoration: underline;
    }

    .login-btn 
    {
        width: 100%;
        padding: 12px;
        border-radius: 25px;
        background: white;
        color: black;
        font-weight: bold;
        font-size: 1.1rem;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 0 15px rgba(255,255,255,0.4);
    }

    .login-btn:hover 
    {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(255,255,255,0.8);
    }

    .create-account 
    {
        margin-top: 18px;
        text-align: center;
        color: #ffffff;
        font-size: 0.95rem;
    }

    .create-account a 
    {
        color: #4da3ff;
        font-weight: bold;
        text-decoration: none;
    }

    .create-account a:hover 
    {
        text-decoration: underline;
    }

    footer, footer p, footer div, footer span 
    {
        color: white !important;
        text-shadow: 0 0 10px black !important;
        font-weight: 700 !important;
    }

    footer a 
    {
        color: #4da3ff !important;
        font-weight: bold !important;
    }

    .done
    {
        color: green;
        text-align: center;
        font-weight: bold;
    }
</style>

<div class="login-box">

    <div class="text-center mb-4">
        <div class="d-flex justify-content-center align-items-center mb-2">
             <i class="fa-solid fa-dumbbell text-primary fs-1 me-2" style="text-shadow: 0 0 15px rgba(13,110,253,0.5);"></i>
             <h2 class="mb-0 fw-bold text-white" style="text-shadow: 0 0 15px rgba(255,255,255,0.2); letter-spacing: 1px;">FitnessCenter</h2>
        </div>
        <p class="text-white-50 small">Welcome back!</p>
    </div>
    @if (TempData["err"] != null)
    {
        <div class="text-danger">
            @TempData["err"]
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <p class="done">
            @TempData["Success"]
        </p>
    }

    <form asp-controller="Home" asp-action="LoginResult" method="post">

        <div class="input-group">
            <input asp-for="userName" type="text" class="form-control" placeholder="Username" />
            <i class="fa-solid fa-user"></i>
            <span asp-validation-for="userName" class="text-danger"></span>
        </div>

        <div class="input-group">
            <input asp-for = "password" type="password" class="form-control" placeholder="Password" />
            <i class="fa-solid fa-lock"></i>
            <span asp-validation-for="password" class="text-danger"></span>
        </div>

        <div class="options">
            <label><input type="checkbox" name="rememberMe" value="true" /> Remember Me</label>
            <a asp-controller="Home" asp-action="ForgotPassword">Forgot Password?</a>
        </div>

        <button type="submit" class="login-btn">Login</button>

        <p class="create-account">
            Don't have an account?
            <a href="/Home/Register">Register</a>
        </p>

    </form>

</div>
