@{
    ViewData["Title"] = "Welcome";
}

<style>
    /* Global Styles for Home Page */
    body {
        background: url('/images/indexBackground.jpg') no-repeat center center fixed;
        background-size: cover;
        background-position: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        overflow-x: hidden;
    }

    /* Navbar Override for Homepage Transparency */
    .navbar {
        background-color: rgba(0, 0, 0, 0.2) !important;
        backdrop-filter: blur(5px);
        transition: background-color 0.3s ease;
    }
    
    .navbar:hover {
        background-color: rgba(0, 0, 0, 0.6) !important;
    }

    /* Hero Section */
    .hero-section {
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.7));
    }

    .hero-content h1 {
        font-size: 4rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 1rem;
        text-shadow: 0 4px 10px rgba(0,0,0,0.5);
        animation: fadeInDown 1s ease-out;
    }

    .hero-content p {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 2.5rem;
        text-shadow: 0 2px 5px rgba(0,0,0,0.5);
        animation: fadeInUp 1s ease-out 0.3s backwards;
    }

    /* Feature Cards */
    .features-section {
        padding: 5rem 0;
        background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 100%;
        color: white;
        text-decoration: none;
        display: block;
    }

    .glass-card:hover {
        transform: translateY(-10px) scale(1.02);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 15px 30px rgba(0,0,0,0.4);
        border-color: rgba(255,255,255,0.3);
        color: white;
    }

    .glass-card i {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        background: -webkit-linear-gradient(45deg, #00c6ff, #0072ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: transform 0.4s ease;
    }
    
    .glass-card:hover i {
        transform: scale(1.2) rotate(5deg);
    }

    .btn-hero {
        padding: 15px 40px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(0, 162, 255, 0.4);
        margin: 0 10px;
        text-decoration: none;
    }

    .btn-primary-hero {
        background: white;
        color: black;
        border: 2px solid white;
    }

    .btn-primary-hero:hover {
        background: transparent;
        color: white;
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.6);
    }

    .btn-outline-hero {
        background: transparent;
        color: white;
        border: 2px solid white;
    }

    .btn-outline-hero:hover {
        background: white;
        color: black;
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.6);
    }

    /* Animations */
    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    footer, footer span, footer p, footer div, footer a {
        text-shadow: none !important; 
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content container">
        <h1>Unlock Your Ultimate Potential</h1>
        <p>Expert Coaching. AI-Powered Plans. Real Results.</p>
        
        <div style="animation: fadeInUp 1s ease-out 0.6s backwards;">
            <a href="/Home/Register" class="btn-hero btn-primary-hero me-3">
                <i class="fa-solid fa-user-plus me-2"></i>Register
            </a>
            <a href="/Home/Login" class="btn-hero btn-outline-hero">
                <i class="fa-solid fa-right-to-bracket me-2"></i>Login
            </a>
        </div>
    </div>
</div>

<!-- Features Section -->
<!-- Info Section -->
<div class="features-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="glass-card p-5">
                    <i class="fa-solid fa-circle-info mb-3"></i>
                    <h3 class="mb-3">About Our Platform</h3>
                    <p class="fs-5 text-white-50">
                        We provide a complete ecosystem for your fitness journey, combining AI technology with expert human coaching.
                        <a asp-action="Info" class="text-warning fw-bold text-decoration-none ms-2">Click here for more <i class="fa-solid fa-arrow-right small"></i></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
