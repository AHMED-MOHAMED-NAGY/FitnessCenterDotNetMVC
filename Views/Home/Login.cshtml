@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>

    body 
    {
        background: url('/images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn 
    {
        from 
        {
            opacity: 0;
            transform: translateY(15px);
        }

        to 
        {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideUp 
    {
        from 
        {
            opacity: 0;
            transform: translateY(30px);
        }

        to 
        {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-box 
    {
        width: 400px;
        padding: 40px;
        margin: 100px auto;
        background: rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        backdrop-filter: blur(12px);
        box-shadow: 0 0 25px rgba(255,255,255,0.2);
        animation: slideUp 0.9s ease-out;
        color: white;
    }

    h2 
    {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        font-weight: bold;
        color: #fff;
        text-shadow: 0 0 15px rgba(255,255,255,0.9);
    }

    .input-group 
    {
        position: relative;
        margin-bottom: 20px;
    }

    .input-group i 
    {
        position: absolute;
        right: 15px;
        top: 14px;
        color: rgba(255,255,255,0.7);
        font-size: 1.1rem;
    }

    .form-control 
    {
        width: 100%;
        padding: 12px 45px 12px 15px;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.4);
        border-radius: 12px;
        color: white;
        height: 45px;
        transition: 0.3s ease-in-out;
    }

    .form-control::placeholder
    {
        color: rgba(255,255,255,0.7);
    }

    .form-control:focus 
    {
        background: rgba(255,255,255,0.15);
        border-color: #4da3ff;
        box-shadow: 0 0 15px rgba(77,163,255,0.9);
    }

    .options 
    {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        color: #fff;
        font-size: 0.9rem;
    }

    .options a 
    {
        color: #4da3ff;
        text-decoration: none;
    }

    .options a:hover 
    {
        text-decoration: underline;
    }

    .login-btn 
    {
        width: 100%;
        padding: 12px;
        border-radius: 25px;
        background: white;
        color: black;
        font-weight: bold;
        font-size: 1.1rem;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 0 15px rgba(255,255,255,0.4);
    }

    .login-btn:hover 
    {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(255,255,255,0.8);
    }

    .create-account 
    {
        margin-top: 18px;
        text-align: center;
        color: #ffffff;
        font-size: 0.95rem;
    }

    .create-account a 
    {
        color: #4da3ff;
        font-weight: bold;
        text-decoration: none;
    }

    .create-account a:hover 
    {
        text-decoration: underline;
    }

    footer, footer p, footer div, footer span 
    {
        color: white !important;
        text-shadow: 0 0 10px black !important;
        font-weight: 700 !important;
    }

    footer a 
    {
        color: #4da3ff !important;
        font-weight: bold !important;
    }

</style>

<div class="login-box">

    <h2>Giriş Yap</h2>

    <form>

        <div class="input-group">
            <input type="text" class="form-control" placeholder="Kullanıcı Adı" />
            <i class="fa-solid fa-user"></i>
        </div>

        <div class="input-group">
            <input type="password" class="form-control" placeholder="Şifre" />
            <i class="fa-solid fa-lock"></i>
        </div>

        <div class="options">
            <label><input type="checkbox" /> Beni Hatırla</label>
            <a asp-controller="Home" asp-action="ForgotPassword">Şifrenizi mi unuttunuz?</a>
        </div>

        <button type="submit" class="login-btn">Giriş Yap</button>

        <p class="create-account">
            Hesabınız yok mu?
            <a href="/Home/Register">Kayıt Ol</a>
        </p>

    </form>

</div>
