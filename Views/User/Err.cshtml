@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 Page Not Found</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
            height: 100vh;
            width: 100%;
            overflow: hidden; /* Prevents scrollbars from decorative shapes */
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        /* --- Content Container --- */
        .content {
            position: relative;
            z-index: 10; /* Keeps content above background shapes */
            max-width: 600px;
            padding: 20px;
        }

        /* Large 404 Number */
        h1 {
            font-size: 10rem;
            font-weight: 300;
            color: #FF7B72; /* Coral/Salmon color */
            line-height: 1;
            margin-bottom: 10px;
        }

        /* "Page not found" Heading */
        h2 {
            font-size: 2rem;
            color: #222;
            margin-bottom: 15px;
            font-weight: 700;
        }

        /* Description Text */
        p {
            color: #444;
            font-size: 1rem;
            margin-bottom: 40px;
            line-height: 1.5;
        }

        /* --- Button Style --- */
        .home-btn {
            display: inline-block;
            text-decoration: none;
            color: #000;
            font-weight: 700;
            font-size: 0.9rem;
            padding: 15px 40px;
            background-color: #fff;
            border: 2px solid #333;
            /* Create the hard drop-shadow effect */
            box-shadow: 4px 4px 0px #e75c52;
            transition: all 0.2s ease;
            text-transform: uppercase;
            cursor: pointer;
        }

        .home-btn:hover {
            transform: translate(-2px, -2px);
            box-shadow: 6px 6px 0px #e75c52;
        }

        .home-btn:active {
            transform: translate(2px, 2px);
            box-shadow: 1px 1px 0px #e75c52;
        }

        /* --- Decorative Background Shapes --- */

        /* 1. Light blue circle behind the 404 text */
        .shape-center-blue {
            position: absolute;
            top: 50%;
            left: 55%;
            transform: translate(-50%, -80%);
            width: 250px;
            height: 250px;
            background-color: #DDF3FA;
            border-radius: 50%;
            z-index: 1; /* Behind text */
        }

        /* 2. Top Left Blue Arc */
        .shape-top-left {
            position: absolute;
            top: -50px;
            left: -50px;
            width: 200px;
            height: 200px;
            background-color: #E0F5FC;
            border-radius: 50%;
        }

        /* 3. Top Right Red Blob */
        .shape-top-right {
            position: absolute;
            top: -100px;
            right: -50px;
            width: 400px;
            height: 300px;
            background-color: #FF6666;
            border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
        }

        /* 4. Top Right Beige Circle (Overlaying the red blob) */
        .shape-top-right-circle {
            position: absolute;
            top: 50px;
            right: 80px;
            width: 120px;
            height: 120px;
            background-color: #FBEDE2;
            border-radius: 50%;
            z-index: 2;
        }

        /* 5. Bottom Left Beige Circle */
        .shape-bottom-left {
            position: absolute;
            bottom: 150px;
            left: 10%;
            width: 60px;
            height: 60px;
            background-color: #FBEDE2;
            border-radius: 50%;
        }

        /* 6. Bottom Right Pink Wave */
        .shape-bottom-right {
            position: absolute;
            bottom: -100px;
            right: -50px;
            width: 600px;
            height: 400px;
            background-color: #FDE2E2;
            border-radius: 100% 0% 0% 0% / 80% 0% 0% 0%;
            z-index: 0;
        }

        /* 7. Bottom Right Small Blue Circle */
        .shape-bottom-blue-circle {
            position: absolute;
            bottom: 180px;
            right: 20%;
            width: 60px;
            height: 60px;
            background-color: #DDF3FA;
            border-radius: 50%;
            z-index: 2;
        }

    </style>
</head>
<body>

    <div class="shape-center-blue"></div>
    <div class="shape-top-left"></div>
    <div class="shape-top-right"></div>
    <div class="shape-top-right-circle"></div>
    <div class="shape-bottom-left"></div>
    <div class="shape-bottom-right"></div>
    <div class="shape-bottom-blue-circle"></div>

    <div class="content">
        <h1>404</h1>
        <h2>Page not found</h2>
        <p>Oops! The page you are looking for does not exist. It might have been moved or deleted.</p>
        <a asp-controller="User" asp-action="Index" class="home-btn">Back To Home</a>
        <p>@TempData["err"]</p>

    </div>

</body>
</html>